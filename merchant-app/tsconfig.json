{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",                       // Make all imports relative to project root
    "paths": {
      "@screens/*": ["app/screens/*"],   // alias for screens
      "@styles/*": ["app/styles/*"],     // <-- ADD THIS LINE for styles
      "@/*": ["*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
